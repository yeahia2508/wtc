<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.dhakadigital.tdd.wtc.activity.MainActivity">

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spnr_sheetName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:ms_multiline="false"
        app:ms_hint="Sheet Name"
        app:ms_enableFloatingLabel="false"
        app:ms_enableErrorLabel="false"
        app:ms_floatingLabelText="floating label"
        app:ms_baseColor="@color/colorPrimary"
        app:ms_highlightColor="@color/colorPrimary"
        app:ms_thickness="2dp"
        app:ms_hintColor="@color/colorAccent"
        app:ms_arrowColor="@color/colorAccent"
        app:ms_arrowSize="16dp"
        app:ms_alignLabels="false"
        app:ms_floatingLabelColor="@color/colorAccent" />


    <TableLayout
        android:layout_margin="4sp"
        android:layout_below="@id/spnr_sheetName"
        android:id="@+id/tbl_user_property"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableRow>

            <Button
                android:id="@+id/bt_start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="start" />

            <Button
                android:id="@+id/bt_stop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="stop" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:id="@+id/tvStartTime"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="00.00.00" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:id="@+id/tvDuration"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="00.00.00" />

        </TableRow>
    <TableRow>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="DATE"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="START/END"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="DURATION"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="DAILY WAGE"/>
    </TableRow>
    </TableLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/tbl_user_property"
        android:id="@+id/rvEarnList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/recycleview_user" />
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
<!--<TextView />-->

    </LinearLayout>
</RelativeLayout>
